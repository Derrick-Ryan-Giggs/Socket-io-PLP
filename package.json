{
    "name": "real-time-notes",
    "version": "1.0.0",
    "description": "Real-time collaborative notes application",
    "main": "backend/server.js",
    "scripts": {
      "start": "node backend/server.js",
      "server": "nodemon backend/server.js",
      "client": "npm start --prefix frontend",
      "dev": "concurrently \"npm run server\" \"npm run client\"",
      "build": "npm install && cd frontend && npm install && npm run build"
    },
    "keywords": [
      "real-time",
      "socket.io",
      "mern",
      "collaborative"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
      "cors": "^2.8.5",
      "dotenv": "^16.0.3",
      "express": "^4.18.2",
      "mongoose": "^7.0.3",
      "socket.io": "^4.6.1"
    },
    "devDependencies": {
      "concurrently": "^8.0.1",
      "nodemon": "^2.0.22"
    },
    "engines": {
      "node": ">=14.0.0"
    }
  }